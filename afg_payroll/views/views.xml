<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="employee_payroll_tree">
      <field name="name">Employee Payroll Tree</field>
      <field name="model">hr.afg.payroll</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sequence"/>
          <field name="employee_id"/>
          <field name="mobile"/>
          <field name="email"/>
           <field name="campus"/>
           <field name="department"/>
           <field name="designation"/>
           <field name="date_of_join"/>

        </tree>
      </field>
    </record>
    <record id="employee_payroll_form" model="ir.ui.view">
      <field name="name">Employee Payroll Form</field>
      <field name="model">hr.afg.payroll</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group string="Employee Payroll Information">
              <group>
              <field name="employee_id" widget="selection"/>
              <field name="mobile"/>
              <field name="email"/>
               <field name="campus"/>
               <field name="emp_salary"/>
               <field name="days"/>
               <field name="name"/>
                
              </group>
              <group>
                  <field name="department"/>
                  <field name="designation"/>
                  <field name="date_of_join"/>
                  <field name="start_date"/>
                   <field name="end_date"/>

              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="employee_payroll_action">
      <field name="name">Employee Payroll Action</field>
      <field name="res_model">hr.afg.payroll</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="employee_payroll_sequence" model="ir.sequence">
      <field name="name">Payroll</field>
      <field name="code">hr.afg.payroll</field>
      <field name="prefix">SLIP/</field>
      <field name="padding">4</field>
      <field name="company_id" eval="False"/>
    </record>
    

    
    
    <menuitem name="Payslips" id="afg_payslips_employee" parent="hr_payroll.menu_hr_payroll_root"
              action="employee_payroll_action"/>
   
    
  </data>
</odoo>